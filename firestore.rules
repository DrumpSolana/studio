
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to create a document in the 'pre-orders' collection.
    // Disallow read, update, delete for all users to protect email privacy.
    match /pre-orders/{document=**} {
      allow create: if true;
      allow read, update, delete: if false;
    }
  }
}
