
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Pre-orders rules ---
    // Allow anyone to create a document in the 'pre-orders' collection.
    // Disallow read, update, delete for all users to protect user privacy.
    match /pre-orders/{document=**} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // --- Businesses rules (for sign-up profiles) ---
    // A user can create a document in the 'businesses' collection if their
    // auth uid matches the document ID. This secures the document to the user.
    match /businesses/{businessId} {
      allow create: if request.auth != null && request.auth.uid == businessId;
      allow read, update, delete: if request.auth != null && request.auth.uid == businessId;
    }

     // --- Test entries rules ---
    // Allow anyone to read and write to the 'test-entries' collection.
    // This is useful for initial setup and testing.
    match /test-entries/{document=**} {
      allow read, write: if true;
    }
  }
}
