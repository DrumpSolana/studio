
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Pre-orders can be created by anyone, but not read, updated or deleted.
    match /pre-orders/{document=**} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // Test entries can be created by anyone, but not read, updated or deleted.
    match /test-entries/{document=**} {
        allow create: if true;
        allow read, update, delete: if false;
    }

    // Business documents can only be created by an authenticated user.
    // They can only be read, updated, or deleted by the user who owns the document.
    match /businesses/{businessId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }
  }
}
