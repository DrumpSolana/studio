rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Businesses rules (for sign-up profiles) ---
    match /businesses/{businessId} {
      // Only the authenticated user can access their own document
      allow create, read, update, delete: if request.auth != null && request.auth.uid == businessId;
    }

    // --- Pre-orders rules ---
    match /pre-orders/{orderId} {
      // Anyone (signed in or not) can create a pre-order
      allow create: if true;

      // No one can read, update, or delete pre-orders to protect privacy
      allow read, update, delete: if false;
    }
    
    // Rule for the test-entries collection
    match /test-entries/{docId} {
      allow read, write: if true; // Allows read and write for testing purposes.
    }
  }
}
