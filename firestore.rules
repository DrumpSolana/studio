rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // --- Pre-orders rules ---
    // Allow anyone to create a document in the 'pre-orders' collection.
    // Disallow read, update, delete for all users to protect user privacy.
    match /pre-orders/{document=**} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // --- Businesses rules (for sign-up profiles) ---
    // Allow an authenticated user to create, read, update and delete their
    // own business document. The document ID must match their user ID.
    match /businesses/{businessId} {
      allow read, write: if request.auth != null && request.auth.uid == businessId;
    }
  }
}
